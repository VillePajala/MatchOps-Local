# Environment Variables Example
# Copy this to .env.local and fill in your values

# ============================================================================
# BACKEND MODE CONFIGURATION
# ============================================================================
# Options: 'local' (default) or 'cloud'
# - local: Uses IndexedDB for storage (works offline, no account needed)
# - cloud: Uses Supabase for storage (requires account, syncs across devices)
NEXT_PUBLIC_BACKEND_MODE=local

# ============================================================================
# SUPABASE CONFIGURATION (Required for cloud mode)
# ============================================================================
# Get these from your Supabase project settings:
# https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ============================================================================
# SENTRY CONFIGURATION (Error Reporting)
# ============================================================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Development Configuration
NEXT_PUBLIC_SENTRY_FORCE_ENABLE=false
ANALYZE=false

# Internal Testing Mode
# Set to 'true' to enable simulated premium purchase/revoke for testing
# Use this for Play Store internal testing track before Play Billing is integrated
# WARNING: Never set to 'true' in production! A safeguard in UpgradePromptModal.tsx
# blocks this in Vercel production regardless, but keep this false for safety.
NEXT_PUBLIC_INTERNAL_TESTING=false

# Debug Configuration (Development Only)
# Comma-separated debug categories: home,history,tactical
# - home: HomePage render cycles and state updates
# - history: Undo/redo history operations (main field)
# - tactical: Tactical view undo/redo and drawing operations
NEXT_PUBLIC_DEBUG=
# Enable all debug categories at once
NEXT_PUBLIC_DEBUG_ALL=